<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fond"
    android:paddingTop="10dp"
    android:gravity="center"
    tools:context=".AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/fonimage"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="@string/auth"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="#7E7A7A"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/country"
            android:background="@drawable/fondcode"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
        </Spinner>

        <EditText
            android:id="@+id/phone"
            android:background="@drawable/fondnum"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="25dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:importantForAutofill="no"
            android:hint="@string/eg"
            android:inputType="phone" tools:targetApi="o"
            android:paddingStart="25dp" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />



    <Button
        android:id="@+id/btn_phone"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/btn_suivant"
        android:textColor="#fff"
        android:layout_marginStart="0dp"
        android:text="@string/suivant"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp" />

</LinearLayout>